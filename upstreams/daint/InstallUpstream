pipeline {

    agent {
        node {
            label 'daint'
        }
    }
    stages {
            stage('Install Upstream') {
                steps {
                    sh"""
                    . ./setup-env.sh
                    spack env activate upstreams/daint
                    spack install -v
                    spack env activate upstreams/daint/rttov
                    ln -s /some/jenkins-read-only/path/rttov131.tar.xz rttov131.tar.xz
                    spack install -v
                    """
                }
            }
    }
    post {
        always {
            echo 'Cleaning up workspace'
            deleteDir()
        }
    }

}

